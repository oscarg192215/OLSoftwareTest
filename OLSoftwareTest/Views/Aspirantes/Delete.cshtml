@model OLSoftwareTest.Models.AspirantesViewModel

@{
    ViewData["Title"] = "Eliminar";
}

<h3>@ViewData["Title"] </h3>
<br />

<h3>Está seguro de eliminar el registro?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("Nombre Usuario")
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.UsuarioLogin
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Nombre")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nombre_aspirante)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Apellido")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.apellido_aspirante)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Documento")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.documento_aspirante)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Fecha Nacimient0")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.fecha_nacimiento_aspirante)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Celular")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.celular_aspirante)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Email")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.email_aspirante)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Direccion")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.direccion_aspirante)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Pais")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.pais_aspirante)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Ciudad")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ciudad_aspirante)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Prueba")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nombre_prueba)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Cantidad Preguntas")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.cantidad_preguntas)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Fecha Inicio")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.fecha_inicio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Fecha Finalizacion")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.fecha_finalizacion)
        </dd>        
    </dl>
    
    <form asp-action="DeleteConfirm">
        <input type="hidden" asp-for="id_prueba_aspirante" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-info">Regresar</a>
    </form>
</div>
