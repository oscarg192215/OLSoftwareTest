@model IEnumerable<OLSoftwareTest.Models.PruebasViewModel>

@{
    ViewData["Title"] = "Pruebas";
}

<h3>@ViewData["Title"] </h3>
<br />

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo</a>
</p>
<div id="listado" class="form-control">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Prueba")
                </th>
                <th>
                    @Html.DisplayName("Tipo de Prueba")
                </th>
                <th>
                    @Html.DisplayName("Nivel")
                </th>
                <th>
                    @Html.DisplayName("Lenguaje")
                </th>
                <th>
                    @Html.DisplayName("Cantidad Preguntas")
                </th>
                <th>
                    @Html.DisplayName("Estado Prueba")
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.nombre_prueba)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TiposPruebas.nombre_tipo_prueba)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NivelesConocimiento.nombre_nivel)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LenguajesProgramacion.nombre_lenguaje)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.cantidad_preguntas)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EstadosPruebaAspirante.nombre_estado)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.id_prueba" class="btn btn-primary"><i class="bi bi-pencil-square"></i></a> |
                            <a asp-action="Details" asp-route-id="@item.id_prueba" class="btn btn-info"><i class="bi bi-eye"></i></a> |
                            <a asp-action="Delete" asp-route-id="@item.id_prueba" class="btn btn-danger"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td>
                        <div>
                            No hay registros para mostrar
                        </div>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>